{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file (project autodetect)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${fileDirname}/../include",
                "-I",
                "/usr/include",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/../main.out"
            ],
            "options": {
                "cwd": "${fileDirname}/.."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
